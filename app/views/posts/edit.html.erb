<br>
<div class="container">
  <%= form_for(@post) do |f| %>
    <div class="form-group">
      <h1><%= f.text_field :title, size: 50 %></h1> 
    </div>
    <div class="form-group">
      <p><%= f.text_area :description, size: "136x15" %></p>
    </div>
    <div class="form-group">
      <%= image_tag @post.image.url, width: "400px", height: "300ox" if @post.image? %>
      <%= f.file_field :image %>
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>         

    </div>
    <div class="form-group">
      <%= f.submit "Publish", class: "btn btn-primary" %>
      <%= f.submit "Save a Draft", class: "btn btn-default" %>    </div>
  <% end %>
</div>