<br>
<div class="container">
  <%= form_for(@post) do |f| %>
    <div class="form-group">
      <h1><%= f.text_field :title, size: 50 %></h1> 
    </div>
    <div class="form-group">
      <p><%= f.text_area :description, size: "136x15" %></p>
    </div>
    <div class="form-group">
      <%= f.submit %>
    </div>
  <% end %>
</div>