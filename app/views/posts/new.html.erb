<% if @post.errors.any? %>
<h2>We have some error here!</h2>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<br>
<div class="container">
  <%= form_for(@post) do |f| %>
    <div class="form-group">
      <h1><%= f.text_field :title, size: 50, placeholder: "Title" %></h1> 
    </div>
    <div class="form-group">
      <p><%= f.text_area :description, size: "136x15", placeholder: "Post Description" %></p>
    </div>
    <div class="form-group">
      <%= f.file_field :image %>
    </div>
<!-- who can see -->
    <div class="form-group">
      <div class="col-md-2"><%= "Who can see" %></div>
      <div class="col-md-10">....
      </div>        
    </div>
<!-- category checkbox -->
    <div class="form-group">
      <div class="col-md-2"><%= "Category" %></div>
      <div class="col-md-10">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>          
      </div>        
    </div>
    <div class="form-group">
      <div class="col-md-12"><%= "Status: " %></div>
    </div>
    <div class="form-group">
      <br>
      <div class="col-md-2"></div>
      <div class="col-md-4"><%= f.submit %></div>
    </div>
  <% end %>
</div>