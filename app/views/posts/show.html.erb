<div class="row-top">
  <div class="index-title">
    <h1><%= @post.title %></h1>
  </div>
</div>
<!-- post -->
<div class="container">
  <div class="media">
<!-- left -->
    <div class="col-md-3">
      <img src="http://via.placeholder.com/100x100" class= " center-block">
    </div>
<!-- right -->
    <div class="col-md-9">
      <div class="form-group">
        <%= image_tag @post.image.url , width: "400px", hight: "300px" %>
        <%= link_to 'Back to index', posts_path %>
        <p class="text-muted">
          <%= @post.description  %>
        </p>
      </div>
<!-- show comment -->
      <div class="form-group">
        <p class="text-muted">
          <% @post.comments.each do |comment| %>
            <%= simple_format comment.content, class: "text-muted" %>          
          <% end %>
        </p>
      </div>
    </div><!-- col-md-9 -->
<!-- create comment -->
 <div class="form-group">
  <%= form_for [@post, @comment] do |f| %>
    <div class="form-group">
      <p><%= f.text_area :content, placeholder: "Say somethings...", class: "form-control" %></p>
    </div>
    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
  </div> 

  </div><!-- media -->
</div><!-- container -->