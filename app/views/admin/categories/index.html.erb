<div class="container">
  <div class="row">
    <div>
      <%= link_to 'Category List', admin_categories_path %>
    </div>
    <div class="col-md-12">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Category Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>              
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>