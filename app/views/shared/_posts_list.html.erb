<table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Replies count</th>
        <th>Title</th>
        <th>Last replied at</th>
        <th>Viewed count</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td scope="row"><%= post.replies_count %></td>
          <td><%= link_to post.title, post_path(post) %></td>
          <td><%= post.created_at.strftime('%Y-%m-%d') %></td> 
          <td><%= post.viewed_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>