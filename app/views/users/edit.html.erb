<div class="container">
  <div class="row">
    <%= form_for(@user) do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control" %>      
      </div>
      <div class="form-group">
        <%= f.text_area :introduction, class: "form-control" %>      
      </div>
      <div class="form-group">
        <%= image_tag @user.avatar.url, width: "100px", height: "100px" if @user.avatar? %>  
        <%= f.file_field :avatar %>
      </div>
      <div class="form-group">
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>